<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- enable window content transitions -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_end</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor"
            tools:targetApi="l">@color/color_end</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/color_end</item>

    </style>

    <style name="StyleTextInputPassword" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="passwordToggleEnabled">true</item>
<!--        <item name="passwordToggleDrawable">@drawable/show_hide_password</item>-->
    </style>
    <style name="StyleTextInputNormal" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

    </style>


    <style name="Theme.SplashScreen" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

</resources>